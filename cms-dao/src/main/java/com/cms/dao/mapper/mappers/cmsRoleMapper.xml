<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.dao.mapper.CmsRoleMapper">

    <sql id="baseField">
        id,
        name,
        is_all,
        status,
        priority
    </sql>

    <sql id="key">
        <if test="name!=null and name!=''">
            name,
        </if>
        <if test="priority!=null">
            priority,
        </if>
        <if test="all!=null">
            is_all,
        </if>
        <if test="status!=null">
            status,
        </if>
        create_time
    </sql>

    <sql id="value">
        <if test="name!=null and name!=''">
            #{name},
        </if>
        <if test="priority!=null">
            #{priority},
        </if>
        <if test="all!=null">
            #{all},
        </if>
        <if test="status!=null">
            #{status},
        </if>
        #{createTime}
    </sql>

    <sql id="updateField">
        update_time = #{updateTime},
        <if test="parentId!=null">
            parent_id = #{parentId},
        </if>
        <if test="menu!=null">
            is_menu = #{menu},
        </if>
        <if test="icon!=null and icon!=''">
            icon = #{icon},
        </if>
        <if test="url!=null and url!=''">
            url = #{url},
        </if>
        <if test="name!=null and name!=''">
            name = #{name},
        </if>
        <if test="action!=null and action!=''">
            action = #{action},
        </if>
        <if test="priority!=null">
            priority = #{priority},
        </if>
    </sql>

    <resultMap id="baseResultMap" type="com.cms.dao.entity.CmsRoleEntity">
        <id property="id" column="id"/>
        <result property="priority" column="priority"/>
        <result property="all" column="is_all"/>
        <result property="status" column="status"/>
        <result property="name" column="name"/>
    </resultMap>

    <insert id="save">
        <selectKey order="AFTER" keyProperty="id" resultType="java.lang.Integer">
            select last_insert_id()
        </selectKey>
        insert into cms_role (<include refid="key"/>) values (<include refid="value"/>)
    </insert>

    <delete id="deleteById">
        delete from cms_permission where id = #{id}
    </delete>

    <update id="update">
        update cms_permission
        <trim prefix="set" suffixOverrides=",">
            <include refid="updateField"/>
        </trim>
        where id = #{id}
    </update>

    <select id="selectByPage" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_role where status = 0 order by priority asc
    </select>

    <select id="selectById" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_permission where id = #{id}
    </select>

</mapper>